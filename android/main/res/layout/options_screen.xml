<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/options_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.tcd.guineec.inventorymanager.options"
    android:background="@android:drawable/screen_background_dark">

    <Button
        android:text="Add Individual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_indiv_button"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorLink="?android:attr/colorActivatedHighlight"
        android:layout_above="@+id/add_proj_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Project properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_above="@+id/search_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="Add project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_proj_button"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/search_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:background="@android:color/darker_gray"
        android:text="SCAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_button"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:minHeight="134dp"
        android:minWidth="134dp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:textColorLink="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>